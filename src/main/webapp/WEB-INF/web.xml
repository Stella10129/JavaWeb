<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Archetype Created Web Application</display-name>
  <!--第一个web项目测试用例-->
  <servlet>
    <servlet-name>MyServlet</servlet-name>
    <servlet-class>com.sly.MyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyServlet</servlet-name>
    <url-pattern>/MyServlet</url-pattern>
  </servlet-mapping>

  <!-- Servlet 生命周期 -->
  <servlet>
    <servlet-name>Life</servlet-name>
    <servlet-class>com.sly.ServletLife</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Life</servlet-name>
    <url-pattern>/life</url-pattern>
  </servlet-mapping>

  <!--Servlet类中各种方法的区别测试-->
  <servlet>
    <servlet-name>ServletMethod</servlet-name>
    <servlet-class>com.sly.ServletMethod</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletMethod</servlet-name>
    <url-pattern>/ServletMethod</url-pattern>
  </servlet-mapping>

  <!--测试request对象-->
  <servlet>
    <servlet-name>RequestServlet</servlet-name>
    <servlet-class>com.sly.RequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestServlet</servlet-name>
    <url-pattern>/RequestServlet</url-pattern>
  </servlet-mapping>

  <!--测试response对象-->
  <servlet>
    <servlet-name>ResponseServlet</servlet-name>
    <servlet-class>com.sly.ResponseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResponseServlet</servlet-name>
    <url-pattern>/ResponseServlet</url-pattern>
  </servlet-mapping>

  <!--用户登录演示用例-->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.login.control.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <!--request重定向-->
  <servlet>
    <servlet-name>HelloRedirect</servlet-name>
    <servlet-class>com.login.control.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloRedirect</servlet-name>
    <url-pattern>/HelloRedirect</url-pattern>
  </servlet-mapping>

  <!--cookie-->
  <servlet>
    <servlet-name>CookieServlet</servlet-name>
    <servlet-class>com.cookie.CookieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CookieServlet</servlet-name>
    <url-pattern>/CookieServlet</url-pattern>
  </servlet-mapping>
</web-app>
